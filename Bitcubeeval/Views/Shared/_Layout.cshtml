<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Raleway:300,400,500,700,800|Montserrat:300,400,700" rel="stylesheet">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="container">

            <div id="logo" class="pull-left">
                <h2><a href="@Url.Action("Index","Home")" class="scrollto">Bitcubeeval-<span style="color:#0026ff">Picnic</span></a></h2>
            </div>
            <div>

                <nav id="nav-menu-container">
                    <ul class="nav-menu">
                        <li><a href="@Url.Action("Index","Home")">Home</a></li>
                        <li><a href="@Url.Action("Contact","Home")">Profile</a></li>
                        <li><a href="@Url.Action("Index","Friends")">Friends</a></li>
                        <li><a href="@Url.Action("Index","Images")">Gallery</a></li>
                        <li><a href="@Url.Action("Services","Home")">Services</a></li>

                        @Html.Partial("_LoginPartial")

                    </ul>
                </nav>
                <div>

                </div>
            </div>

        </div>
    </header>
    <hr />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Bitcubeeval-Madide-SM, Applicant</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
