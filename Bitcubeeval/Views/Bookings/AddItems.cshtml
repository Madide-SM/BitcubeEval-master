@model Bitcubeeval.Models.Booking

@{
    ViewBag.Title = "AddItems";
}

<h2>AddItems</h2>

@using (Html.BeginForm("AddItems","Bookings"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.BookingId)
    @Html.HiddenFor(m => m.DateCreated)
    @Html.HiddenFor(m => m.EventDate)
    @Html.HiddenFor(m => m.LocationId)
    @Html.HiddenFor(m => m.NumOfPeople)
    @Html.HiddenFor(m=>m.FoodItems)
    <div class="form-group">
        <div class="col-10 mx-auto my-3 col-md-6 col-lg-4">
            <strong>Select Your Items:</strong>
            @foreach (var item in Model.Items)
            {
                <div class="form-group">
                    <div class="col-md-10">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"
                                       name="SelectedFruits"
                                       value="@item.Name" /> @item.Name
                                </label>
                            </div>
                        </div>
                    </div>
            }
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Items" class="btn btn-primary" />
        </div>
    </div>
}
